<Window x:Class="SlimGIS.Samples.UseWmts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sgwpf="clr-namespace:SlimGis.MapKit.Wpf;assembly=SGMapKit.Wpf"
        xmlns:sgst="clr-namespace:SlimGis.ShareKit.Wpf;assembly=SGShareKit.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <sgst:SampleHeader Grid.Row="0" Title="Use Wmts Sample - WPF"/>
        <sgwpf:MapControl x:Name="map" Grid.Row="1" Loaded="map_Loaded"/>
        <sgst:SampleFooter Grid.Row="2"/>
    </Grid>
</Window>
